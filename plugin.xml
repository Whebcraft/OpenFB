<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.openfb"
        version="0.5">

  <name>OpenFB</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/openfb.js" target="js/openfb.js"/>

  <js-module src="www/openfb.js" name="openfb">
    <clobbers target="openfb" />
  </js-module>

  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="openfb">
        <param name="android-package" value="com.openfb"/>
      </feature>
    </config-file>

    <source-file src="src/android/openfb.java" target-dir="src/com/example/plugin/"/>
  </platform>

  <platform name="ios">
    <config-file target="config.xml" parent="/widget">
      <feature name="openfb">
        <param name="ios-package" value="HWPHello" />
      </feature>
    </config-file>

    <header-file src="src/ios/HWPHello.h" target-dir="HelloPlugin"/>
    <source-file src="src/ios/HWPHello.m" target-dir="HelloPlugin"/>
  </platform>
  
<dependency id="cordova-plugin-inappbrowser" />
</plugin>